<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerVertical="true"
    android:background="@color/lightblue">

    <ImageView
        android:id="@+id/backqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/backblack" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backqr"
        android:visibility="gone"
        android:layout_margin="@dimen/_20sdp">



    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/service_back"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/qrName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/opensans_semibold"
            tools:text="Divyanshu Sonwani"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/qrpascode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            tools:text="adfgwdaf"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_20sdp" />

        <ImageView
            android:id="@+id/qr_code_img"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/iv_email" />

        <Button
            android:id="@+id/btnshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/opensans_semibold"
            android:text="Share"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_minus25sdp"
        android:layout_gravity="top|center"
        android:layout_above="@+id/share"
        android:background="@drawable/circle_white"
        android:src="@drawable/logo"/>


</RelativeLayout>