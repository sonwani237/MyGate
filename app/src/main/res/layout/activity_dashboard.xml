<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".dashboard.ui.Dashboard">

    <include
        layout="@layout/active_dashboard" />

    <include
        layout="@layout/inactive_dashboard" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/floatingbg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Quick Actions"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="@font/opensans_bold"/>



        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/white_circle"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/guestt"
            android:id="@+id/ivguest"
            android:padding="@dimen/_5sdp"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivguest"
            android:background="@drawable/white_circle"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/motorbike"
            android:padding="@dimen/_5sdp"
            android:id="@+id/ivscooter"/>


        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ivscooter"
            android:background="@drawable/white_circle"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@drawable/car"
            android:padding="@dimen/_5sdp"
            android:id="@+id/ivcar"/>





    </RelativeLayout>

</RelativeLayout>