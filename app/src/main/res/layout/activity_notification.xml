<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Accent"
    tools:context=".dashboard.ui.NotificationActivity">

    <!-- <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:onClick="onFinish"
         android:text="Finish" />-->



        <LinearLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rounded_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="Guest is waiting at the gate"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:orientation="horizontal"
                android:weightSum="3">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/man"
                    android:layout_marginLeft="@dimen/_60sdp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/opensans_regular"
                    android:text="Puranjay"/>
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/telephone"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/circular"
        android:layout_marginTop="@dimen/_190sdp"
        android:src="@drawable/man"
        />

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/circle_white"
        android:layout_marginTop="@dimen/_340sdp"
        android:layout_marginLeft="@dimen/_80sdp"
        android:src="@drawable/cancel"
        android:padding="@dimen/_14sdp"
        />
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/circle_green"
        android:layout_marginTop="@dimen/_340sdp"
        android:padding="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_200sdp"
        android:src="@drawable/ic_check"
        />
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_400sdp"
       >-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_85sdp"
            android:text="Deny"
            android:textAllCaps="true"
            android:fontFamily="@font/opensans_semibold"
            android:layout_marginTop="@dimen/_385sdp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_385sdp"
            android:layout_marginLeft="@dimen/_195sdp"
            android:text="Approve"
            android:textAllCaps="true"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/black"/>




</FrameLayout>